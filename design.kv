<Zoom>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.
    allow_stretch: True
    elevation: 0


                
<campoTitulo>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    canvas:
        Color:
            rgb: 0.3,0.4,0.65
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: root.g
        bold: True
        color: 1,1,1,1

<tituloFiltro>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint: (0.4, 0.05)
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: root.g
        bold: True
        color: 1,1,1,1

<campoBD1>:
    orientation: 'vertical'
    padding: -2
    canvas:
        Color:
            rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text_size:self.size
        padding: (10,0)
        halign:'left'
        valign:'middle'
        text: root.g
        color: 0,0,0,1

<campoBD2>:
    orientation: 'vertical'
    AnchorLayout:
        
        canvas.before:
            Color:
                rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
            Rectangle:
                pos: self.pos
                size: self.size
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'

        Button:
            text: 'ver'
            size_hint: (0.9, 0.6)
            background_color: (0.2,0.3,0.9, 1)
            anchor_x: 'center'
            anchor_y: 'center'

<MyWidget>:
    orientation: 'vertical'
    size_hint: (0.3, 1) if root.end else (1, 1)
    canvas:
        Color:
            rgb:0,0,0
        Rectangle:
            size: self.size
            pos: self.pos

<Pantalla>:
    canvas:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: self.pos

<ListaBase>:
    orientation: 'horizontal'
    elevation: 0
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<Barra>:
    size_hint: (0.3, 1)
    elevation: 5
    canvas:
        Color:
            rgb: (0, 0, 0)
        Rectangle:
            size: self.size
            pos: self.pos
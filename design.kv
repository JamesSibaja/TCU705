        #     anchor_x: 'center'
        #     anchor_y: 'center'

<Barra>:
    size_hint_y: None
    minimum_height: self.height
    padding: 10
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos

<Barra2>:
    size_hint_y: None
    minimum_height: self.height
    canvas:
        Color:
            rgb: (0.2, 0.35, 0.43)
        Rectangle:
            size: self.size
            pos: self.pos

<Contenedor>:
    size_hint: (0.3, 1)
    padding: 10
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos

<MenuInicial>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    


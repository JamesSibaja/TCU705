#:import ScrollEffect  kivy.effects.scroll.ScrollEffect
#:import Button kivy.uix.button.Button
#:import Window kivy.core.window.Window
#:import ceil math.ceil

<Zoom>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.
    allow_stretch: True
    elevation: 0
       
<campoTitulo>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint:(1,1)
    canvas:
        Color:
            rgb: 0.3,0.4,0.65
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: root.g
        bold: True
        color: 1,1,1,1

<tituloFiltro>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint:  (0.4, 0.05) if root.filtro else (1,1)

    Label:
        text: root.g
        bold: True
        color: 1,1,1,1

<Separador>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint: (1, 0.01) 
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos

<Separador2>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint: (1, 0.03) 
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos
    
<BotonOpcion>:
    size_hint_y: None
    height: 30 * int(ceil((len(root.text)* 58) / Window.size[0]))
    #size_hint:(1, (30/Window.size[1]) * int(ceil((len(root.text)* 58) / Window.size[0])))
    text_size:self.size
    padding: (10,0)
    halign: 'center'
    valign:'middle'

<campoBD1>:
    orientation: 'vertical'
    padding: -2
    size_hint_y:None
    height:60
    
    canvas:
        Color:
            rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
        Rectangle:
            size: (self.size)
            pos: self.pos
    Label:
        text_size:self.size
        padding: (10,0)
        halign:'left'
        valign:'middle'
        text: root.g
        color: 0,0,0,1

<campoBD2>:
    orientation: 'vertical'
    size_hint: (1,1)
    canvas:
        Color:
            rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        id:an
        canvas:
            Color:
                rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
            Rectangle:
                pos: self.pos
                size: self.size
        size: self.size
        anchor_x: 'center'
        anchor_y: 'center'

        Button:
            id: boton
            text: 'Agregar' if root.pdf else 'ver'
            size_hint: (0.75, 0.5)
            background_color: (0.15,0.25,0.8,1)

            anchor_x: 'center'
            anchor_y: 'center'
            on_press: root.agregarPDF() if root.pdf else root.verPDF()

<Divisor>:
    rgb:(0,0,0)
    size_hint: (1, 1)
    effect_cls: ScrollEffect
    do_scroll_y: True
    bar_width: 10
    bar_color: 0.5, 0.5, 0.5, 0.85   
    bar_inactive_color:  0.5, 0.5, 0.5, 0.4 
    scroll_type:  ['bars']

<MyWidget>:
    rgb:(0,0,0)
    size_hint: (1,0.88)
    effect_cls: ScrollEffect
    do_scroll_y: True
    bar_width: 10
    bar_color: 0.5, 0.5, 0.5, 0.85   
    bar_inactive_color:  0.5, 0.5, 0.5, 0.4 
    scroll_type:  ['bars']
    

<Pantalla>:
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<ListaBase>:
    orientation: 'horizontal'
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<Fila>:
    orientation: 'horizontal'
    size_hint_y:None
    height:60
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<Fila2>:
    orientation: 'horizontal'
    size_hint:(1,0.05)
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos
            
<Fila3>:
    orientation: 'horizontal'
    size_hint:(1,0.05)
    #on_press: self.nuevaPagina()
    AnchorLayout:
        
        canvas.before:
            Color:
                rgb:0.72,0.72,0.72
            Rectangle:
                pos: self.pos
                size: self.size
        anchor_x: 'center'
        anchor_y: 'center'

        # Button:
        #     text: 'Siguiente'

#:import ScrollEffect  kivy.effects.scroll.ScrollEffect
#:import Button kivy.uix.button.Button
#:import Window kivy.core.window.Window
#:import ceil math.ceil
       
<TitleField>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint:(1,1)
    canvas:
        Color:
            rgb: 0.3,0.4,0.65
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: root.g
        bold: True
        color: 1,1,1,1

<TitleFilter>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint_y: None
    height: 30 * int(ceil((len(root.g)* 50) / Window.size[0]))

    Label:
        text: root.g
        text_size:self.size
        padding: (10,0)
        valign:'middle'
        color: 1,1,1,1
    
<BotonOpcion>:
    size_hint_y: None
    height: 30 * int(ceil((len(root.text)* 50) / Window.size[0]))
    text_size:self.size
    padding: (10,0)
    halign: 'center'
    valign:'middle'

<Separador>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint: (1, 0.01) 
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos

<Separador2>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint: (1, 0.03) 
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos

<campoBD1>:
    orientation: 'vertical'
    padding: -2
    size_hint_y:None
    height:60
    
    canvas:
        Color:
            rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
        Rectangle:
            size: (self.size)
            pos: self.pos
    Label:
        text_size:self.size
        padding: (10,0)
        halign:'left'
        valign:'middle'
        text: root.g
        color: 0,0,0,1

<campoBD2>:
    orientation: 'vertical'
    size_hint: (1,1)
    canvas:
        Color:
            rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        id:an
        canvas:
            Color:
                rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
            Rectangle:
                pos: self.pos
                size: self.size
        size: self.size
        anchor_x: 'center'
        anchor_y: 'center'

        Button:
            id: boton
            text: 'Agregar' if root.pdf else 'ver'
            size_hint: (0.75, 0.5)
            background_color: (0.15,0.25,0.8,1)

            anchor_x: 'center'
            anchor_y: 'center'
            on_press: root.agregarPDF() if root.pdf else root.verPDF()

<Divisor>:
    rgb:(0,0,0)
    size_hint: (1, 1)
    effect_cls: ScrollEffect
    do_scroll_y: True
    bar_width: 10
    bar_color: 0.5, 0.5, 0.5, 0.85   
    bar_inactive_color:  0.5, 0.5, 0.5, 0.4 
    scroll_type:  ['bars']

<DataViewer>:
    rgb:(0,0,0)
    size_hint: (1,0.88)
    effect_cls: ScrollEffect
    do_scroll_y: True
    bar_width: 10
    bar_color: 0.5, 0.5, 0.5, 0.85   
    bar_inactive_color:  0.5, 0.5, 0.5, 0.4 
    scroll_type:  ['bars']
    

<DatabaseGUIApp>:
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<ListaBase>:
    orientation: 'horizontal'
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<Fila>:
    orientation: 'horizontal'
    size_hint_y:None
    height:60
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<Fila2>:
    orientation: 'horizontal'
    size_hint:(1,0.05)
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<Fila3>:
    orientation: 'horizontal'
    size_hint:(1,0.05)
    #on_press: self.nuevaPagina()
    AnchorLayout:
        
        canvas.before:
            Color:
                rgb:0.72,0.72,0.72
            Rectangle:
                pos: self.pos
                size: self.size
        anchor_x: 'center'
        anchor_y: 'center'

<Toolbar>:
    size_hint:((0.25,1) if Window.size[0]*0.2>100 else (100/( Window.size[0]-100),1))if root.show else (1/( Window.size[0]-1),1)
    padding: 10
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos

<ToolbarShow>:
    size_hint_y:1
    size_hint_x:None
    width:12
    canvas:
        Color:
            rgb: (0, 0.24, 0.32)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text:'.\n.\n.'
            
<DataViewerContainer>:
    size_hint_y: None
    minimum_height: self.height
    canvas:
        Color:
            rgb: (0.2, 0.35, 0.43)
        Rectangle:
            size: self.size
            pos: self.pos

<Contenedor>:
    size_hint: (0.3, 1)
    padding: 10
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos

<MenuInicial>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    


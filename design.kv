#:import ScrollEffect  kivy.effects.scroll.ScrollEffect
#:import Button kivy.uix.button.Button
<Zoom>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.
    allow_stretch: True
    elevation: 0
       
<campoTitulo>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint:(1,1)
    canvas:
        Color:
            rgb: 0.3,0.4,0.65
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: root.g
        bold: True
        color: 1,1,1,1

<tituloFiltro>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint:  (0.4, 0.05) if root.filtro else (1,1)

    Label:
        text: root.g
        bold: True
        color: 1,1,1,1

<Separador>:
    orientation: 'vertical'
    padding: (-2,-2,-2,0)
    size_hint: (1, 0.01) 
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        bold: True
        color: 1,1,1,1

    
<campoBD1>:
    orientation: 'vertical'
    padding: -2
    size_hint_y:None
    height:60
    
    canvas:
        Color:
            rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
        Rectangle:
            size: (self.size)
            pos: self.pos
    Label:
        text_size:self.size
        padding: (10,0)
        halign:'left'
        valign:'middle'
        text: root.g
        color: 0,0,0,1

<campoBD2>:
    orientation: 'vertical'
    size_hint: (0.3,1)
    AnchorLayout:
        
        canvas.before:
            Color:
                rgb: (0.83,0.83,0.9) if root.color else (0.9,0.9,0.95)
            Rectangle:
                pos: self.pos
                size: self.size
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'

        Button:
            text: 'ver'
            size_hint: (0.9, 0.6)
            background_color: (0.2,0.3,0.9, 1)

            background_normal: 'normal.png'
            anchor_x: 'center'
            anchor_y: 'center'



<MyWidget>:
    effect_cls: ScrollEffect
    do_scroll_y: True
    bar_width: 10
    bar_color: 0.5, 0.5, 0.5, 0.85   
    bar_inactive_color:  0.5, 0.5, 0.5, 0.5 
    scroll_type:  ['bars']
    size_hint: (1,0.88)

<Pantalla>:
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<ListaBase>:
    orientation: 'horizontal'
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<Fila>:
    orientation: 'horizontal'
    size_hint_y:None
    height:60
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos

<Fila2>:
    orientation: 'horizontal'
    size_hint:(1,0.05)
    canvas:
        Color:
            rgb:0.72,0.72,0.72
        Rectangle:
            size: self.size
            pos: self.pos
            
<Fila3>:
    orientation: 'horizontal'
    size_hint:(1,0.05)
    #on_press: self.nuevaPagina()
    AnchorLayout:
        
        canvas.before:
            Color:
                rgb:0.72,0.72,0.72
            Rectangle:
                pos: self.pos
                size: self.size
        anchor_x: 'center'
        anchor_y: 'center'

        # Button:
        #     text: 'Siguiente'
        #     size_hint: (0.9, 0.6)

        #     anchor_x: 'center'
        #     anchor_y: 'center'

<Barra>:
    size_hint: (1, 1)
    padding: 10
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos

<Barra2>:
    size_hint_y: None
    minimum_height: self.height
    canvas:
        Color:
            rgb: (0.2, 0.35, 0.43)
        Rectangle:
            size: self.size
            pos: self.pos

<Divisor>:
    size_hint: (0.25, 1)
    padding: (0,0,0,0)
    canvas:
        Color:
            rgb: (0.2, 0.2, 0.2)
        Rectangle:
            size: self.size
            pos: self.pos

<Contenedor>:
    size_hint: (0.3, 1)
    padding: 10
    canvas:
        Color:
            rgb: (0, 0.30, 0.40)
        Rectangle:
            size: self.size
            pos: self.pos